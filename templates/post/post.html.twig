<!-- Start Post Section -->
<div class="shadow-sm bg-body-tertiary rounded">

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-body-tertiary rounded-5 pt-3 px-3 ">
            <li class="breadcrumb-item">
                <a class="link-body-emphasis" href="{{ path('app_post') }}">
                    <img src="{{ asset('icons/house-fill.svg') }}" alt="Inicio" width="16" height="16">
                </a>
            </li>
            <li class="breadcrumb-item">
                <a class="link-body-emphasis fw-semibold text-decoration-none" href="#">Posts</a>
            </li>
        </ol>
    </nav>
    <hr>

    <div class="post-main bg-body-tertiary rounded mx-md-4 mx-3 my-md-3 my-2">
        <article class="post-post pb-lg-4 pb-3">
            <h2 class="post-post-title">{{ post.title | capitalize }}</h2>
            <p class="post-post-meta">{{ post.creationdate | date }} by <a href="#">{{ post.user.email }}</a></p>

            {% if post.file is not null %}
                <!-- Start Post Image -->
                <img id="postImage" src="{{ asset("uploads/files/#{post.file}") }}" alt="ImÃ¡gen del post"
                     class="mx-auto d-block pb-lg-4 pb-mb-3"
                     data-bs-toggle="modal" data-bs-target="#imageModal">
                <!-- End Post Image -->

                <!-- Start Image Modal -->
                <div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <img id="PostImageModal" src="{{ asset("uploads/files/#{post.file}") }}" alt="">
                        </div>
                    </div>
                </div>
                <!-- End Image Modal-->
            {% endif %}

            {{ post.description }}
        </article>

    </div>
</div>
<!-- End Post Section -->