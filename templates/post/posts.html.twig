<!-- Start Posts Container -->
<div class="col-md-8">
    {% for post in posts %}
    <article class="blog-post pe-auto ps-0">
        <div class="container-fluid shadow-sm pt-xl-4 p-xl-4 p-md-3 p-sm-1 rounded border">
            <div class="row align-items-start">

                {% if post.file %}
                <div class="col-3">
                    <a href="{{ path('postDetails', {id: post.id, url: post.url}) }}">
                        <img src="{{ asset("uploads/files/#{post.file}") }}"
                             class="img-thumbnail img-fluid float-md-start w-100" alt="...">
                    </a>
                </div>
                {% else %}
                    {# No tiene imagen, entonces no se muestra #}
                {% endif %}

                <div class="col-auto">
                    <a class="text-decoration-none" href="{{ path('postDetails', {id: post.id, url: post.url}) }}">
                        <h3 class="link-body-emphasis mb-1">{{ post.title | capitalize }}
                        </h3>
                    </a>
                    <p class="text-secondary">{{ post.creation_date | date }} por <a href="#">{{ post.user_username }}</a></p>

                </div>
                <hr class="mt-3">
                <p class="b">{{ post.description }}</p>

            </div>
        </div>
    </article>
    {% endfor %}
</div>
<!-- End Posts Container -->
