<!-- Start Post Comment Section -->
<div class="row pt-md-2 pt-1">
    <div class="d-flex justify-content-center align-items-center">
        <div class="card">

            <div class="mt-2">

                <div class="p-3 pb-0">
                    <h5>Comentarios</h5>
{#                    {% if comments is null %}
                       <h3>Se el primero en comentar</h3>
                    {% endif %}#}
                </div>
                {% for comment in comments %}

                <div class="d-flex flex-row p-3">
                    {% if comment.user_avatar == NULL %}
                        <img src="{{ asset('image/default_avatar.png') }}" width="40" height="40" class="rounded-circle mr-3">
                    {% else %}
                        <img src="{{ asset("uploads/files/#{comment.user_avatar}") }}" width="40" height="40" class="rounded-circle mr-3">
                    {% endif %}
                    <div class="w-100">
                        <small>{{ 'now'|date('d/m/Y') }}</small>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex flex-row align-items-center">
                                <span class="mr-2">{{ comment.user_email }}</span>
                                <!--<small class="c-badge">Top Comment</small>-->
                            </div>
                            
                        </div>

                        <p class="text-justify comment-text mb-0">{{ comment.comment }}</p>

                        <!--<div class="d-flex flex-row user-feed">

                            <span class="wish"><i class="fa fa-heartbeat mr-2"></i>24</span>
                            <span class="ml-3"><i class="fa fa-comments-o mr-2"></i>Reply</span>


                        </div>-->
                    </div>
                </div>
                {% endfor %}

            </div>

        </div>
    </div>
</div>
<!-- End Post Comment Section -->
