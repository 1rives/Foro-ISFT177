{#      Plantilla Base      #}
{#  - Define los contenidos base como los metadatos y los estilos básicos #}
{# Está plantilla deberá ser extendida en cada layout.html.twig #}
<!DOCTYPE html>
<html>
    {% block head %}
        <head>
        {% block meta %}
            <meta charset="utf-8">
            <meta http-equiv="X-UA-Compatible" content="IE=edge">
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <meta name="title" content="Foro ISFT 177">
            <meta name="description" content="El Foro del ISFT 177 es un espacio virtual para compartir entre alumnos.">
            <meta name="keywords" content="Foro, terciario, ISFT, ISFT177, Forum">
            <meta name="robots" content="index, nofollow">
            <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
            <meta name="language" content="Spanish">
        {% endblock %}

        {% block custom_styles %}
            {# Usar como último recurso o para probar cosas. #}
        {% endblock %}

        <title>{% block title %} Foro ISFT 177 {% endblock %}</title>

        {% block stylesheets %}
            <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet" type="text/css">
        {% endblock %}
        </head>
    {% endblock %}

    {% block body %}
        {# El contenido de la página va acá #}
        {# mediante el uso de los templates #}
    {% endblock %}

    {% block footer %}
        {% include 'general/footer.html.twig' %}
    {% endblock %}


    {# TODO : mover los 1eros 3 scripts a la página de posts #}
    {% block scripts %}
        <script src="{{ asset('bundles/fosjsrouting/js/router.min.js') }}"></script>
        <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
        <script src="{{ asset('js/ajax-call.js') }}"></script>
        <script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>
        <script src="{{ asset('js/jquery-3.7.0.min.js') }}"></script>
    {% endblock %}
</html>
