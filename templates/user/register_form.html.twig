<!-- Start Register Form -->
{{ form_start(form, {'attr': {'class': 'row g-3'}}) }}
    <div class="text-danger">{{ form_errors(form) }}</div>
    <div class="col-md-6">
        {{ form_label(form.email) }}
        {{ form_widget(form.email) }}
    </div>
    <div class="col-md-6">
        {{ form_label(form.password, 'Contraseña') }}
        {{ form_widget(form.password) }}
    </div>
    <div class="col-12">
        {{ form_label(form.photo, 'Avatar') }}
        {{ form_widget(form.photo) }}
    </div>
    <div class="col-12">
        {{ form_label(form.description, 'Descripción') }}
        {{ form_widget(form.description, {'attr': {'placeholder': 'Ingrese una descripción breve'}}) }}
    </div>
    <div class="col-12">
        {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
    </div>
    {# If you want to control the URL the user is redirected to on success #}
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
{{ form_end(form, {'content': 'sas'}) }}
<!-- End Register Form -->