<!-- Start Post Content -->
{% if user.account_status == 0 %}
    <div class="container-lg p-3 d-flex">
        <h2 class="modal-title mx-auto mb-5">Usuario no encontrado</h2>
    </div>
{% else %}
    <div class="container-lg d-flex pt-md-3 pt-sm-2 pb-md-4 pb-sm-3 pb-3">
        <div class="card d-flex mx-auto px-5 pb-md-3 pb-sm-2 pt-md-4 pt-sm-2 pt-3">
            <img class="card-img img-profile img-thumbnail px-1 mx-auto mb-2"
                    {% if user.photo == NULL %}
                        src="{{ asset('image/default_avatar_hd.png') }}"
                    {% else %}
                        src="{{ asset("uploads/files/#{user.photo}") }}"
                    {% endif %}
                 alt="Avatar de {{ user.first_name }}">
            <h3 class="card-title mx-auto">{{ user.first_name }} {{ user.last_name }}</h3>
        </div>
    </div>

    <div class="container-lg px-md-4 px-sm-2 pb-md-3 pb-sm-2 pb-3">
        <div class="card">
            <ul class="list-group">
                <li class="list-group-item item">Carrera: Tres años de PHP con Lopez</li>
                <li class="list-group-item">Correo:
                {% if user.hide_email == 1 %}
                    <strong>Ocultado por usuario</strong>
                {% else %}
                    {{ user.email }}
                {% endif %}
                </li>
{#                <li class="list-group-item item">Ultima vez en linea: {{ 'now' | format_datetime('relative_long') }}</li>#}
                <li class="list-group-item">Descripción:
                    {% if user.description == NULL %}
                        <p class="text-muted card p-2 mt-2">El usuario no ha dado una descripción.</p>
                    {% else %}
                        <p class="card p-2 mt-2">{{ user.description }}</p>
                    {% endif %}
                </li>
            </ul>
        </div>
    </div>
{% endif %}
<!-- End Post Content -->